{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es6",

    "baseUrl": ".",
    "paths": {
      "Static/*": ["static/*"],
      "Core/*": ["src/core/*"],
      "Utils/*": ["src/utils/*"],
      "Constants": ["src/utils/constants.ts"],
      "Interfaces": ["src/utils/interfaces.ts"]
    }
  },
  "include": [
    "src/**/*",
    "src/**/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
